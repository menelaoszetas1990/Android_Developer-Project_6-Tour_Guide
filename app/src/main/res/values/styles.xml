<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text appearance style for the intro text -->
    <style name="intro_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/intro_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Appearance style for the attraction title -->

    <style name="attraction_title">
        <item name="android:background">@color/intro_text_color</item>
    </style>

    <!-- Text appearance style for the intro text -->
    <style name="attraction_name_text">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/attraction_name_padding_left</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:textSize">@dimen/attraction_name_text_size</item>

    </style>

    <!-- Text appearance style for the cost text -->
    <style name="attraction_cost_name_text">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">@dimen/attraction_cost_padding_right</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:textSize">@dimen/attraction_name_text_size</item>

    </style>

    <!-- Text appearance style for the description text -->
    <style name="attraction_description_text">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/attraction_description_padding_right</item>
        <item name="android:textColor">@color/intro_text_color</item>
        <item name="android:textSize">@dimen/attraction_description_text_size</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
    </style>

</resources>
