<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.example.menelaos.tourguidexanthi.IntroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_text_top" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:adjustViewBounds="true"
        android:background="@drawable/intro_image"
        android:contentDescription="@string/intro_image_text_description"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_text_bottom" />
    </LinearLayout>

</LinearLayout>